!
! Truetype fonts defined in ~/.Xresources.d/xft
!
URxvt*font:           MyNFont=13.5
URxvt*boldFont:       MyBFont=13.5
URxvt*italicFont:     MyIFont=13.5
URxvt*bolditalicFont: MyBIFont=13.5

URxvt.allow_bold: false
URxvt.geometry: 80x40
!
! Perl Extensions
!
URxvt.perl-ext:        default,font-size
!
! Change font on the fly.
!
URxvt.keysym.C-equal:  perl:font-size:increase
URxvt.keysym.C-minus:  perl:font-size:decrease
!URxvt.keysym.C-S-Up:   perl:font-size:incglobal
!URxvt.keysym.C-S-Down: perl:font-size:decglobal
URxvt.keysym.C-0:      perl:font-size:reset
URxvt.keysym.C-slash:  perl:font-size:show
URxvt.font-step.step:  1
!
! Resize the window.
!
!URxvt.keysym.C-7: command:\033[8;20;80t
!URxvt.keysym.C-6: command:\033[8;30;80t
!URxvt.keysym.C-5: command:\033[8;40;80t
URxvt.keysym.C-2: command:\033[8;40;120t
URxvt.keysym.C-1: command:\033[8;40;80t

!
URxvt*scrollBar_right: true
URxvt*scrollBar:  false
URxvt*scrollColor: #000000
URxvt*saveLine:   5000
URxvt*borderless: 1
URxvt*iconFile:   /usr/share/icons/Adwaita/scalable/apps/utilities-terminal-symbolic.svg
URxvt*urlLauncher: chromium-browser
URxvt*loginShell: false
URxvt*saveLines: 1024
URxvt.intensityStyles: false
